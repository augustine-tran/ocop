{
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "files.associations": {
    "*.css": "postcss",
    "*.erb": "erb"
  },
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "tailwindCSS.includeLanguages": {
    "erb": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "vscode-erb-beautify.customEnvVar": {
    "LC_ALL": "en_US.UTF-8"
  },
  "rubyLsp.rubyVersionManager": "rbenv",
  "rubyLsp.formatter": "rubocop",
  "railsI18n.localeFilePattern": "config/locales/**/*.yml",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#4751d3",
    "activityBar.background": "#4751d3",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#e07e85",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#4751d3",
    "statusBar.background": "#2d37ba",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#4751d3",
    "statusBarItem.remoteBackground": "#2d37ba",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#2d37ba",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#2d37ba99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#2d37ba"
}
