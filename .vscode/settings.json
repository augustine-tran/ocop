{
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "files.associations": {
    "*.css": "postcss",
    "*.erb": "erb"
  },
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "tailwindCSS.includeLanguages": {
    "erb": "html"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.erb$",
        "cmd": "bundle exec erblint -a ${file}"
      }
    ]
  },
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },
  "vscode-erb-beautify.customEnvVar": {
    "LC_ALL": "en_US.UTF-8"
  },
  "rubyLsp.rubyVersionManager": "rbenv",
  "rubyLsp.formatter": "rubocop",
  "railsI18n.localeFilePattern": "config/locales/**/*.yml",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#16726d",
    "activityBar.background": "#16726d",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#df79e5",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#16726d",
    "statusBar.background": "#0e4744",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#16726d",
    "statusBarItem.remoteBackground": "#0e4744",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#0e4744",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#0e474499",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#0e4744"
}
