<% content_for :page_header do %>
  <%= t(:home) %>
<% end %>
<div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
  <div class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
    <div class="ml-4 mt-4">
      <div class="flex items-center">
        <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t(:panel_submissions) %></h3>
      </div>
    </div>
  </div>
</div>
<%= turbo_frame_tag "submissions", src: panel_submissions_path, target: :_top %>
<% if Current.person.president? %>
  <div class="mt-8 border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
    <div class="-ml-4 -mt-4 flex flex-wrap items-center justify-between sm:flex-nowrap">
      <div class="ml-4 mt-4">
        <div class="flex items-center">
          <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t(:menu_final_submissions) %></h3>
        </div>
      </div>
    </div>
  </div>
  <%= turbo_frame_tag "submissions", src: final_submissions_path, target: :_top %>
<% end %>
