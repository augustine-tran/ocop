<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @administrative_unit %>
    <%= link_to "Edit this administrative_unit", edit_administrative_unit_path(@administrative_unit), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this administrative_unit", administrative_unit_path(@administrative_unit), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to administrative_units", administrative_units_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
