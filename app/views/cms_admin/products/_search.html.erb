<%= search_form_for q, url: cms_admin_products_path do |f| %>
  <div class="grid grid-cols-1 gap-y-4 sm:flex gap-x-4 mt-8">
    <div class="relative">
      <%= f.label :title_cont, class: "absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900" %>
      <%= f.search_field :title_cont, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
    </div>
    <div class="relative">
      <%= f.label :stars_eq, class: "absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900" %>
      <%= f.select :stars_eq, [1, 2, 3, 4, 5].map { |i| [render_ranks(i), i] }, { include_blank: true }, class: 'block w-36 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
    </div>
    <div class="relative">
      <%= f.label :category_id_eq, class: "absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900" %>
      <%= f.collection_select :category_id_eq, Category.find_by!(slug: 'san-pham').children, :id, :title, { include_blank: true }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
    </div>
    <%= f.submit class: 'rounded-md bg-indigo-50 px-2.5 py-1.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100' %>
  </div>
<% end %>
