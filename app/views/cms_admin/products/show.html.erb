<% @page_title = @product.title %>
<% content_for :page_header do %>
  <%= Product.model_name.human %>
<% end %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render 'product', product: @product %>
    <hr class="mt-4">
    <div class="flex gap-x-4">
      <%= link_to t(:edit_this_product), edit_cms_admin_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to t(:destroy_this_product), cms_admin_product_path(@product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      <%= link_to t(:back_to_products), cms_admin_products_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
