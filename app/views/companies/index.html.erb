<% content_for :page_header do %>
  <%= t(:list_companies) %>
<% end %>
<% content_for :quick_action do %>
  <%= link_to t(:create_company), new_company_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
<% end %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="companies" class="min-w-full">
    <%= render @companies %>
  </div>
</div>
