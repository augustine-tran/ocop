<% content_for :page_header do %>
  <%= t(:new_company) %>
<% end %>
<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto w-full flex">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-yellow-50 mb-5 text-yellow-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>
  <%= render "form", company: @company %>
  <%= link_to t(:back_to_companies), companies_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
