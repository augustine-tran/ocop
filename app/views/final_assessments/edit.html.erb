<% @page_title = t('.title') %>
<%= turbo_stream_from @assessment %>
<%= render 'tabs' %>
<div class="mx-auto w-full mt-8 p-4 shadow rounded">
  <%= turbo_frame_tag @submission, class: 'mx-auto w-full', src: panel_submission_assessments_path(@submission) %>
</div>
<div class="mx-auto w-full mt-8 p-4 shadow rounded">
  <%= turbo_frame_tag "#{dom_id(@submission)}_differences", class: 'mx-auto w-full', src: panel_submission_differences_path(@submission) %>
</div>
<div class="mx-auto w-full mt-8">
  <%= render partial: 'form', locals: { submission: @submission, assessment: @assessment } %>
</div>
<footer class="mt-8 md:bottom-0 bg-gray-200 md:px-12 py-2 md:py-4 border-t-2 border-gray-100">
  <%= render 'summary' %>
</footer>
