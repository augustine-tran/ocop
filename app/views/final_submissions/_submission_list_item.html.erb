<%= turbo_frame_tag submission do %>
  <div id="<%= dom_id(submission) %>" class="overflow-hidden bg-white shadow sm:rounded-lg mb-4">
    <div class="px-4 py-6 sm:px-6">
      <h3 class="text-base font-semibold leading-7 text-gray-900"><%= submission.name %></h3>
      <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500"><%= t("activerecord.attributes.submission.product_groups.#{submission.product_group}") %></p>
    </div>
    <div class="border-t border-gray-100">
      <% if submission.account != Current.account %>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900"><%= Account.human_attribute_name(:name) %></dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= t("activerecord.attributes.submission.statuses.#{submission.account.name}") %></dd>
        </div>
      <% end %>
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:scores_sum) %></dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 flex flex-nowrap"><%= render_stars(submission.final_assessment.scores_sum, 100, 5) %> ( <%= t(:scores_sum, scores: submission.final_assessment.scores_sum) %>   )</dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:status) %></dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= t("activerecord.attributes.submission.statuses.#{submission.status}") %></dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 <%= 'hidden' if submission.files.blank? %>">
          <dt class="text-sm font-medium leading-6 text-gray-900"><%= Submission.human_attribute_name(:files) %></dt>
          <dd class="mt-2 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <div data-controller="lightbox">
              <% submission.files.each do |file| %>
                <% if file.representable? %>
                  <%= tag.a href: file.representation(:large).processed.url, data: { download_url: url_for(file) } do %>
                    <div class="inline-block mr-2 w-32 h-32 overflow-hidden">
                      <%= image_tag file.representation(:thumb), class: "w-full h-full object-cover", alt: file.filename %>
                    </div>
                  <% end %>
                <% else %>
                  <%= image_tag "placeholder.png", alt: "Download file" %>
                <% end %>
              <% end %>
            </div>
          </dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:description) %></dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= submission.description %></dd>
        </div>
      </dl>
    </div>
    <div class="px-4 py-5 sm:px-6">
      <%= link_to t(:show_this_submission), final_submission_path(submission),
                  class: "rounded-lg px-3 py-2 bg-gray-100 inline-block font-medium",
                  data: {
                    turbo_frame: '_top'
                  } %>
    </div>
  </div>
<% end %>
