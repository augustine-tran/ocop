<div class="overflow-hidden bg-white shadow sm:rounded-lg">
  <div class="px-4 py-6 sm:px-6 bg-blue-100 flex flex-col sm:flex-row">
    <h3 class="sm:w-3/4 text-base font-semibold leading-7 text-gray-800 mb-2 sm:mb-0"><%= node.title %></h3>
    <p class="sm:w-1/4 max-w-2xl text-sm leading-6 font-semibold text-gray-500 sm:text-right sm:px-8"><%= t(:points, points: node.score) %></p>
  </div>
  <div class="border-t border-gray-100">
    <dl class="divide-y divide-gray-200">
      <%= render partial: 'node_subs', collection: node.children, as: :node %>
    </dl>
  </div>
</div>
