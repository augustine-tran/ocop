<% @page_title = t('.reset_password') %>
<% content_for :page_header do %>
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
    <%= tag.h2 class: 'mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-200' do %>
      <%= @page_title %>
    <% end %>
  </div>
<% end %>
<% content_for :page_footer do %>
  <p class="mt-10 text-center text-sm text-gray-200">
    <%= t('registrations.new.has_account') %>
    <%= link_to t('registrations.new.sign_in'), sign_in_path, class: "font-semibold leading-6 text-indigo-300 hover:text-indigo-500" %>
  </p>
<% end %>
<%= form_with(url: sign_in_path, html: { class: "space-y-6" }) do |form| %>
  <div>
    <%= form.label :email, t(".email_address", default: "Email address"), class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  <div>
    <%= form.submit t(".send_reset_password_instructions"), class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
  </div>
<% end %>
