<!DOCTYPE html>
<html class="h-full bg-gray-100">
  <head>
    <%= page_title_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= current_env_meta_tags %>
    <%= current_user_meta_tags %>
    <%= stylesheet_link_tag "tailwind", "inter-font", 'data-turbo-track': "reload" %>
    <%= stylesheet_link_tag "application", 'data-turbo-track': "reload" %>
    <%= stylesheet_link_tag "https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" %>
    <%= javascript_importmap_tags %>
    <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
    <%= tag.meta name: "vapid-public-key", content: Rails.configuration.x.vapid.public_key %>
    <%= tag.link rel: "manifest", href: webmanifest_path(format: :json) %>
    <%= yield :head %>
  </head>
  <body class="h-full">
    <div class="min-h-full">
      <%= render "navigation" %>
      <main class="-mt-32">
        <div class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
          <div class="rounded-lg bg-white px-5 py-6 shadow sm:px-6">
            <div class="mx-auto w-full text-center">
              <% if notice.present? %>
                <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
              <% end %>
              <% if alert.present? %>
                <p class="py-2 px-3 bg-yellow-50 mb-5 text-yellow-500 font-medium rounded-lg inline-block" id="notice"><%= alert %></p>
              <% end %>
            </div>
            <!-- Your content -->
            <%= yield %>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
