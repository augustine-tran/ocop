<div>
  <div class="mx-auto max-w-3xl text-base leading-7 text-gray-700 mt-4">
    <div class="flex items-center gap-x-4 text-xs">
      <%= tag.time datatime: l(product.updated_at, format: :short) do %>
        <%= l product.updated_at, format: :short %>
      <% end %>
      <%= link_to product.category.title, product_path(product), class: 'relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100' %>
    </div>
    <h1 class="mt-2 mb-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl text-justify"><%= product.title %></h1>
    <div class="relative h-full xl:ml-0">
      <%= image_tag cover_photo(product.files, [720, nil]), class: 'h-full w-full rounded-2xl bg-gray-50 object-cover' %>
    </div>
    <div class="mt-8 text-justify">
      <%= product.body %>
    </div>
  </div>
</div>
