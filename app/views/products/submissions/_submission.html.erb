<div id="<%= dom_id submission %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= submission.title %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= submission.status %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= submission.description %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Photos:</strong>
    <% submission.photos.each do |photo| %>
      <div class="w-32 h-32 overflow-hidden">
        <%= image_tag photo.variant(:thumb), class: "w-full h-full object-cover" %>
      </div>
    <% end %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this submission", [@product, submission], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this submission", edit_product_submission_path(@product, submission), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
