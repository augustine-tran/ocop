<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @submission %>
    <%= link_to t('edit'), edit_product_submission_path(@product, @submission), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to t('destroy'), product_submission_path(@product, @submission), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to t('back_to_submissions'), product_submissions_path(@product), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%# <%= link_to t('Evaluate'), edit_submission_criterium_path(submission, criterion), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %> %>
  </div>
</div>
