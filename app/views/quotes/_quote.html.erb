<%= turbo_frame_tag quote do %>
  <div id="<%= dom_id quote %>">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= quote.name %>
    </p>
    <% if action_name != "show" %>
      <%= link_to "Show this quote", quote, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Edit this quote", edit_quote_path(quote),
                  data: {
                    turbo_frame: dom_id(quote)
                  },
                  class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this quote", quote_path(quote), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <hr class="mt-6">
    <% end %>
  </div>
<% end %>
