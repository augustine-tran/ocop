<div id="<%= dom_id(submission) %>" class="overflow-hidden bg-white shadow sm:rounded-lg mb-4">
  <div class="px-4 py-6 sm:px-6">
    <h3 class="text-base font-semibold leading-7 text-gray-900"><%= submission.name %></h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500"><%= t("activerecord.attributes.submission.product_groups.#{submission.product_group}") %></p>
  </div>
  <div class="border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:scores_sum) %></dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= submission.scores_sum %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:status) %></dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= t("activerecord.attributes.submission.statuses.#{submission.status}") %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 <%= 'hidden' if submission.photos.blank? %>">
        <dt class="text-sm font-medium leading-6 text-gray-900"><%= Submission.human_attribute_name(:photos) %></dt>
        <dd class="mt-2 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
          <% submission.photos.each do |photo| %>
            <div class="inline-block mr-2 w-32 h-32 overflow-hidden">
              <%= image_tag(photo.variant(:thumb), class: "w-full h-full object-cover") if photo.content_type.start_with?('image/') %>
              <%= content_tag(:span, "[Non-image file] #{photo.filename}", class: "w-full h-full object-cover" ) unless photo.content_type.start_with?('image/') %>
            </div>
          <% end %>
        </dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-900"><%= Submission.human_attribute_name(:description) %></dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= submission.description %></dd>
      </div>
    </dl>
  </div>
</div>
