<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" ><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Submissions</h1>
  </div>
  <% content_for :quick_action do %>
    <%= link_to new_submission_path, class: "relative inline-flex items-center gap-x-1.5 rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" do %>
      <%= render 'shared/icons/add_button' %>
      <%= t(:create_submission) %>
    <% end %>
  <% end %>
  <div id="submissions" class="min-w-full">
    <%= render @submissions %>
  </div>
</div>
